{
  "name": "lumi-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite",
    "prepare": "husky install",
    "dev:electron": "concurrently \"npm run dev\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 npx electron .\"",
    "log": "node tools/log_daily.js",
    "export-kb": "node tools/export_kb_for_training.js",
    "copy-kb-to-training": "node tools/copy_kb_to_training.js",
    "infer-reranker": ".venv\\Scripts\\python.exe tools/infer_reranker.py",
    "retrain": "node tools/retrain.js",
    "build": "vite build",
    "postbuild": "node scripts/copy_models_postbuild.js",
    "start": "node scripts/ensure_dist.js && electron .",
    "test:nn": "node test/test_nn.js",
    "package": "electron-builder",
    "fine-tune-model": "node tools/fine_tune_model.mjs assets/models/Lumi.glb assets/models/Lumi_tuned.glb",
    "normalize-model": "node tools/normalize_model.mjs assets/models/Lumi_tuned.glb assets/models/Lumi.glb"
  },
  "dependencies": {
    "lucide-react": "^0.268.0",
    "dexie": "^3.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.153.0"
  },
  "devDependencies": {
    "@gltf-transform/core": "^4.3.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^23.6.0",
    "sharp": "^0.34.5",
    "cross-env": "^7.0.3",
    "typescript": "^5.1.6",
    "husky": "^8.0.0",
    "vite": "^5.0.0"
  },
  "optionalDependencies": {
    "@gltf-transform/core": "^1.6.0",
    "sharp": "^0.32.6"
  },
  "build": {
    "appId": "com.yourname.lumi",
    "productName": "Lumi Desktop",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

