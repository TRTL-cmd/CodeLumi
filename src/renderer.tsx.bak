import React from 'react';
import './styles.css';

// Kira uses index.html directly - no React rendering needed
console.log('Kira renderer loaded - using index.html');

window.addEventListener('error', (ev) => {
  console.error('Global error', ev.error || ev.message);
  const r = document.getElementById('root');
  if (r) r.innerHTML = '<div style="padding:24px;font-family:Arial;color:#333"><h2>Kira encountered an error</h2><p>Open developer tools to see details.</p></div>';
});
